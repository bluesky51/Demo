<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <com.sky.wang.widget.CustomNavigatorBar
             android:id="@+id/customView"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:leftImage="@drawable/leftarrow"
             app:rightImage="@drawable/rightarrow"
             app:leftImageVisiable="true"
             app:rightImageVisible="true"
             app:leftText="左边"
             app:rightText="右边"
             app:midText="标题"
             app:midTextFontColor="@color/title_bar_title_text_color"
             app:leftTextColor="@color/title_bar_left_text_color"
             app:rightTextColor="@color/title_bar_right_text_color"
             app:titleBarBackground="@color/navigate_statusbar_bgcolor"
             app:midTextFontSize="@dimen/midTextFontSize"
             app:leftTextVisibale="true"
             app:rightTextVisible="true"
             app:leftTextFontSize="@dimen/leftTextFontSize"
             app:rightTextFontSize="@dimen/rightTextFontSize"
             />


         <com.classic.common.MultipleStatusView
             android:id="@+id/main_multiplestatusview"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_below="@id/customView"
             app:loadingView="@layout/custom_loading_view"
             app:emptyView="@layout/custom_empty_view"
             app:errorView="@layout/custom_error_view"
             app:noNetworkView="@layout/custom_no_network_view"
             >

             <android.support.v7.widget.RecyclerView
                 android:id="@+id/recyclerView"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 style="@style/a"></android.support.v7.widget.RecyclerView>
         </com.classic.common.MultipleStatusView>

     </RelativeLayout>
</layout>