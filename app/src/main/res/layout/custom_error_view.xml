<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/error_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/error_retry_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_error"
        />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/custom_view_img_text_margin_top"
        android:textColor="@color/custome_error_text_color"
        android:layout_below="@id/error_retry_view"
        android:text="@string/custom_error_tip_text"
        android:textSize="@dimen/custom_error_view_text_size"/>
</RelativeLayout>